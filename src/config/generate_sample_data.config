# ============================ VERTICAL 0, Party 2  ============================
V0_P2_NUM_ROWS=40
# =========================== VERTICAL 0, Party 3  ============================
V0_P3_NUM_ROWS=30
# ============================ VERTICAL 0, Column 0  ============================
V0_C0_NAME=payload1
V0_C0_DATATYPE=DOUBLE
V0_C0_DIST=UNIFORM          # Must be one of {NORMAL, UNIFORM, DISCRETE_UNIFORM}
V0_C0_MEAN=0.5              # Average number of invoices per block. Double value.
V0_C0_VAR=NA
V0_C0_MAX=1.0
